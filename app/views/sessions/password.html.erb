<div class="auth-form">
  <h2><%= t("views.auth.password_login_title") %></h2>

  <p class="auth-hint">
    <%= t("views.auth.password_login_hint") %>
  </p>

  <%= form_with url: password_login_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, t("views.auth.email_label") %>
      <%= f.email_field :email, required: true, placeholder: t("views.auth.email_placeholder"), autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, t("views.auth.password_label") %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit t("views.auth.login_button") %>
    </div>
  <% end %>

  <p class="auth-footer">
    <%= link_to t("views.auth.use_magic_link"), login_path %>
  </p>
</div>
