<div class="settings-page">
  <h2><%= t("views.settings.title") %></h2>

  <% if @user.errors.any? %>
    <div class="error-messages">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="settings-section">
    <h3><%= t("views.settings.profile") %></h3>

    <%= form_with model: @user, url: settings_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, required: true %>
        <p class="form-hint"><%= t("views.settings.username_hint") %></p>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, disabled: true %>
        <p class="form-hint"><%= t("views.settings.email_hint") %></p>
      </div>

      <div class="form-group">
        <%= f.label :bio, t("views.settings.bio") %>
        <%= f.text_area :bio, rows: 3, maxlength: 500, placeholder: t("views.settings.bio_placeholder") %>
        <p class="form-hint"><%= t("views.settings.bio_hint") %></p>
      </div>

      <div class="form-group">
        <%= f.label :website, t("views.settings.website") %>
        <%= f.url_field :website, placeholder: "https://..." %>
      </div>

      <div class="form-group">
        <%= f.label :github_username, t("views.settings.github") %>
        <%= f.text_field :github_username, placeholder: "username" %>
      </div>

      <div class="form-group">
        <%= f.label :twitter_username, t("views.settings.twitter") %>
        <%= f.text_field :twitter_username, placeholder: "username" %>
      </div>

      <div class="form-group">
        <%= f.label :linkedin_url, t("views.settings.linkedin") %>
        <%= f.url_field :linkedin_url, placeholder: "https://linkedin.com/in/..." %>
      </div>

      <div class="form-actions">
        <%= f.submit t("views.common.save") %>
      </div>
    <% end %>
  </section>

  <section class="settings-section">
    <h3><%= t("views.settings.password_section") %></h3>

    <% if @user.has_password? %>
      <p class="settings-info"><%= t("views.settings.has_password") %></p>
    <% else %>
      <p class="settings-info"><%= t("views.settings.no_password") %></p>
    <% end %>

    <%= form_with url: settings_password_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :password, t("views.settings.new_password") %>
        <%= f.password_field :password, required: true, minlength: 8 %>
        <p class="form-hint"><%= t("views.settings.password_hint") %></p>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t("views.settings.password_confirmation") %>
        <%= f.password_field :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit t("views.settings.set_password") %>
      </div>
    <% end %>
  </section>

  <section class="settings-section">
    <h3><%= t("views.settings.notifications_section") %></h3>
    <%= form_with model: @user, url: settings_path, method: :patch, local: true do |f| %>
      <div class="checkbox-group">
        <%= f.check_box :email_notifications, id: "email_notifications" %>
        <%= f.label :email_notifications, t("views.settings.email_notifications_label") %>
      </div>
      <p class="settings-info"><%= t("views.settings.email_notifications_hint") %></p>
      <div class="form-actions">
        <%= f.submit t("views.common.save") %>
      </div>
    <% end %>
  </section>

  <section class="settings-section">
    <h3><%= t("views.settings.newsletter_section") %></h3>
    <% if @newsletter_subscription&.confirmed? && !@newsletter_subscription&.unsubscribed? %>
      <p class="settings-info"><%= t("views.settings.newsletter_subscribed") %></p>
      <div class="form-actions">
        <%= button_to t("views.settings.newsletter_unsubscribe"), settings_newsletter_path, method: :delete, class: "btn", data: { turbo_confirm: t("views.settings.newsletter_unsubscribe_confirm") } %>
      </div>
    <% else %>
      <p class="settings-info"><%= t("views.settings.newsletter_not_subscribed") %></p>
      <div class="form-actions">
        <%= button_to t("views.settings.newsletter_subscribe"), settings_newsletter_path, method: :post, class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>

  <section class="settings-section">
    <h3><%= t("views.settings.data_section") %></h3>
    <p class="settings-info"><%= t("views.settings.data_info") %></p>
    <div class="form-actions">
      <%= link_to t("views.settings.export_data"), settings_export_path, class: "btn" %>
    </div>
  </section>

  <section class="settings-section settings-danger">
    <h3><%= t("views.settings.danger_zone") %></h3>
    <p class="settings-info"><%= t("views.settings.delete_warning") %></p>
    <div class="form-actions">
      <%= button_to t("views.settings.delete_account"), settings_destroy_path, method: :delete, class: "btn btn-danger", data: { turbo_confirm: t("views.settings.delete_confirm") } %>
    </div>
  </section>
</div>
