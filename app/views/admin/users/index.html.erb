<% content_for(:title) { "Użytkownicy | Panel admina" } %>

<div class="admin-page">
  <h1>Użytkownicy</h1>

  <div class="admin-nav">
    <%= link_to "Dashboard", admin_dashboard_path, class: "admin-nav-link" %>
    <%= link_to "Użytkownicy", admin_users_path, class: "admin-nav-link active" %>
    <%= link_to "Moderacja", admin_moderation_index_path, class: "admin-nav-link" %>
  </div>

  <table class="admin-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Rola</th>
        <th>Status</th>
        <th>Karma</th>
        <th>Posty</th>
        <th>Data rejestracji</th>
        <th>Akcje</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= 'banned-row' if user.banned? %>">
          <td><%= user.id %></td>
          <td><%= link_to user.username, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td><span class="role-badge role-<%= user.role %>"><%= user.role %></span></td>
          <td><span class="status-badge status-<%= user.status %>"><%= user.status %></span></td>
          <td><%= user.karma %></td>
          <td><%= user.posts.count %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= link_to "Szczegóły", admin_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
